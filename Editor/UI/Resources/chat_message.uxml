<ui:UXML xmlns:ui="UnityEngine.UIElements" xmlns:uie="UnityEditor.UIElements" editor-extension-mode="False">
    <ui:VisualElement name="chat_message_container" style="flex-grow: 0; padding-top: 10px; padding-right: 10px; padding-bottom: 10px; padding-left: 10px; flex-direction: row; align-items: flex-start; justify-content: flex-start; align-self: auto; flex-shrink: 0;">
        <ui:Label parse-escape-sequences="true" name="avatar" style="background-image: resource(&apos;logo&apos;); width: 20px; height: 20px; -unity-text-align: upper-left; margin-right: 10px; align-self: flex-start;" />
        <ui:VisualElement style="flex-grow: 1;">
            <ui:Foldout text="Reasoning" name="reasoning_block" value="true">
                <ui:Label name="reasoning" />
            </ui:Foldout>
            <ui:TextField name="content" select-all-on-focus="false" vertical-scroller-visibility="Auto" multiline="true" select-all-on-mouse-up="false" readonly="true" style="-unity-background-image-tint-color: rgba(248, 0, 0, 0); color: rgb(171, 93, 93); border-top-left-radius: 5px; border-top-right-radius: 5px; border-bottom-right-radius: 5px; border-bottom-left-radius: 5px; height: auto; width: 100%; align-items: flex-start; max-width: 100%; margin-bottom: 0; padding-top: 0; padding-right: 0; padding-bottom: 0; padding-left: 0; white-space: normal; max-height: 500px; margin-left: 0; margin-top: 0; margin-right: 0;" />
            <ui:VisualElement name="message_context" style="display: none; flex-direction: row; flex-wrap: wrap; margin-top: 5px; margin-bottom: 5px; padding: 5px; border-radius: 3px; background-color: rgba(48, 47, 47, 0.3);" />
            <ui:VisualElement name="function_calls" style="display: none;" />
            <ui:VisualElement name="auto_approve_limit_container" class="auto_approve_limit_container" style="display: none; padding: 10px; margin-bottom: 10px; border-radius: 5px;">
                <ui:Label text="Maximum Requests Reached" style="font-size: 14px; -unity-font-style: bold; margin-bottom: 5px;" />
                <ui:Label name="auto_approve_count_label" text="Coplay has auto-approved N API requests. Would you like to reset the count and proceed with the task?" style="white-space: normal; margin-bottom: 10px;" />
                <ui:VisualElement style="flex-direction: row; gap: 10px;">
                    <ui:Button text="Proceed" name="proceed_button" style="padding: 5px 15px;" />
                    <ui:Button text="Adjust Limit" name="adjust_limit_button" style="padding: 5px 15px;" />
                </ui:VisualElement>
            </ui:VisualElement>
            <ui:VisualElement name="image_preview" class="image-preview-container" />
            <ui:VisualElement name="cost_and_feedback" style="flex-direction: row; margin-top: 5px;">
                <ui:Label name="cost_label" class="message-cost" style="flex-grow: 1;" />
                <ui:Button name="copy_message_button" text="\uf0c5" parse-escape-sequences="true" tooltip="Copy message" class="font-medium" />
                <ui:Button name="restore_button" text="Restore checkpoint" tooltip="Restore to After" class="font-medium restore-button" style="display: none;" />
                <ui:VisualElement name="feedback_buttons" style="flex-direction: row; justify-content: flex-end; margin-left: auto; display: none;">
                    <ui:Button name="like_button" text="\uf164;" parse-escape-sequences="true" tooltip="This was helpful" class="font-medium" />
                    <ui:Button name="dislike_button" text="\uf165;" parse-escape-sequences="true" tooltip="This was not helpful" class="font-medium" />
                </ui:VisualElement>
            </ui:VisualElement>
            <ui:VisualElement name="checkpoint_line_container" class="checkpoint-line-container" style="display: none;">
                <ui:VisualElement name="checkpoint_dotted_line" class="checkpoint-dotted-line" />
                <ui:Button name="checkpoint_restore_button" text="Restore Checkpoint" class="checkpoint-restore-button" />
            </ui:VisualElement>
        </ui:VisualElement>
    </ui:VisualElement>
</ui:UXML>
