    background-color: rgba(0, 0, 0, 0);
    border-width: 0;
}

/* Copy thread ID button styling */
#copy_thread_id_button {
    cursor: Link;
}

#copy_thread_id_button:hover {
    background-color: rgba(149, 149, 149, 0.5);
    cursor: Link;
}

#copy_thread_id_button:active {
    background-color: rgba(149, 149, 149, 0.7);
}

#copy_message_button {
    border-width: 0;
    margin: 5px 0 0 0;
    padding: 2px 5px;
    -unity-font: resource('Fonts/Font Awesome 6 Free-Solid-900');
    -unity-font-definition: initial;
    background-color: rgba(0,0,0,0);
    cursor: Link;
}

#copy_all_messages {
    margin-left: 4px;
}

/* Thread ID field styling - smaller font using fixed size */
#thread_id_field {
    white-space: normal;
    font-size: 8px;
}

#thread_id_field TextInput {
    background-color: rgba(0, 0, 0, 0);
    border-width: 0;
    padding: 2px 4px;
    white-space: normal;
    font-size: 8px;
}

/* Feedback popup border */
#feedback_popup {
    border-width: 1px;
    border-color: rgba(150, 150, 150, 0.4);
}

/* Feedback popup toggle */
.feedback-toggle > .unity-toggle__input {
    margin-right: 8px;
}

.message-cost {
    font-size: 10px;
    margin-top: 8px;
}

#context_usage_bar VisualElement.unity-progress-bar__background {
    border-radius: 5px;
}

#context_usage_bar VisualElement.unity-progress-bar__progress {
    border-radius: 5px;
    background-color: rgb(119, 119, 119);
}

#context_usage_bar Label.unity-progress-bar__title {
    color: rgb(230, 230, 230);
}

/* Checkpoint line styles */
.checkpoint-line-container {
    flex-direction: row;
    align-items: center;
    margin-top: 5px;
    margin-bottom: 5px;
    height: 20px;
}

.checkpoint-dotted-line {
    flex-grow: 1;
    height: 1px;
    background-color: rgba(128, 128, 128, 0.3);
    border-top-width: 1px;
    border-top-color: rgba(128, 128, 128, 0.2);
}

.checkpoint-restore-button {
    font-size: 10px;
    height: 18px;
    padding-left: 8px;
    padding-right: 8px;
    padding-top: 2px;
    padding-bottom: 2px;
    margin-left: 10px;
    background-color: rgba(80, 80, 80, 0.1);
    border-top-width: 1px;
    border-bottom-width: 1px;
    border-left-width: 1px;
    border-right-width: 1px;
    border-top-color: rgba(128, 128, 128, 0.2);
    border-bottom-color: rgba(128, 128, 128, 0.2);
    border-left-color: rgba(128, 128, 128, 0.2);
    border-right-color: rgba(128, 128, 128, 0.2);
    border-top-left-radius: 3px;
    border-top-right-radius: 3px;
    border-bottom-left-radius: 3px;
    border-bottom-right-radius: 3px;
    color: rgba(180, 180, 180, 0.8);
    cursor: Link;
}

.checkpoint-restore-button:hover {
    background-color: rgba(80, 80, 80, 0.3);
    border-top-color: rgba(128, 128, 128, 0.4);
    border-bottom-color: rgba(128, 128, 128, 0.4);
    border-left-color: rgba(128, 128, 128, 0.4);
    border-right-color: rgba(128, 128, 128, 0.4);
    color: rgba(200, 200, 200, 1.0);
    cursor: Link;
}

.checkpoint-restore-button:active {
    background-color: rgba(80, 80, 80, 0.5);
}

/* Message context styles */
#message_context {
    flex-direction: row;
    flex-wrap: wrap;
    margin-top: 5px;
    margin-bottom: 5px;
    padding: 5px;
    border-radius: 3px;
    background-color: rgba(48, 47, 47, 0.3);
}

/* Message context items - reuse existing context item styles */
#message_context .context-item {
    flex-grow: 0;
    flex-direction: row;
    align-items: center;
    background-color: rgba(48, 47, 47, 0.84);
    border-radius: 3px;
    height: 20px;
    width: auto;
    min-width: 60px;
    max-width: 150px;
    margin-right: 5px;
    padding-left: 5px;
    padding-right: 5px;
    margin-top: 3px;
}

#message_context .context-item Label {
    font-size: 10px;
    text-overflow: ellipsis;
    color: rgb(197, 197, 197);
    overflow: hidden;
    white-space: nowrap;
}

/* Message context image items */
#message_context .image-context-item {
    width: 40px;
    height: 40px;
    position: relative;
    background-color: rgba(48, 47, 47, 0.84);
    border-radius: 3px;
    margin-right: 5px;
    margin-top: 3px;
}

#message_context .image-context-item .image-thumbnail {
    width: 100%;
    height: 100%;
    border-radius: 3px;
    background-color: rgba(100, 100, 100, 0.5);
    -unity-background-scale-mode: scale-and-crop;
    border-width: 1px;
    border-color: rgba(150, 150, 150, 0.3);
}

.coplay-tabbed-view__header Button.coplay-tabbed-view__header__button--active {
    -unity-font-style: bold;
    border-right-width: 1px;
    border-left-width: 1px;
    border-top-width: 1px;
}

.coplay-tabbed-view__header Button:focus {
    border-top-width: 2px;
}

.coplay-tabbed-view__header Button {
    border-width: 0;
    border-top-left-radius: 3px;
    border-top-right-radius: 3px;
    border-bottom-right-radius: 0;
    border-bottom-left-radius: 0;
    margin: 0;
    flex-grow: 1;
}

.coplay-tabbed-view {
    flex-direction: column;
    flex-grow: 1;
}

.coplay-tabbed-view__header {
    flex-direction: row;
}

.coplay-tabbed-view__content {
    padding-top: 5px;
    flex-grow: 1;
}

